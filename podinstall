#!/bin/bash

FLAGS=""
INTEL_BUILD=""

for flag in "$@"; do
    if [[ $flag == *"r"* ]]; then
        FLAGS="${FLAGS} --repo-update"
    fi
    if [[ $flag == *"c"* ]]; then
        podclean && echo
        FLAGS="${FLAGS} --clean-install"
    fi
    if [[ $flag == *"v"* ]]; then
        FLAGS="${FLAGS} --verbose"
    fi
    if [[ $flag == *"i"* ]]; then
        INTEL_BUILD="arch -x86_64"
    fi
done

set -x

$INTEL_BUILD pod install $FLAGS
