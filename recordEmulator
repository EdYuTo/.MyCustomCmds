#!/bin/bash

HELP="Usage: $(basename $0) [filename].[extension] [ -p PATH ]"

if [ -z "$1" ]; then
	echo "$HELP"
    exit 1
fi

while getopts "p" opt; do
    case "$opt" in
        p)
            PATH=${OPTARG};;
        *)
            echo "$HELP"
            exit 1;;
    esac
done

if [ -z "${HELP}" ]; then
	mkdir -p $PATH && cd $PATH
fi

echo "Wait for recording to start... press CTRL+C to stop"
xcrun simctl io booted recordVideo "$1"
